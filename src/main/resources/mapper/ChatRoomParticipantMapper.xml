<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.web.userchat.mapper.ChatRoomParticipantMapper">
    <resultMap id="ChatRoomParticipantMap" type="ChatRoomParticipant">
        <id property="participantId" column="participant_id"/>
        <result property="roomId" column="room_id"/>
        <result property="userId" column="user_id"/>
        <result property="isActive" column="is_active"/>
    </resultMap>
    <!-- 활성 상태 업데이트 -->
    <update id="updateActiveStatus">
        UPDATE chat_room_participants
        SET is_active = #{isActive}
        WHERE room_id = #{roomId} AND user_id = #{userId}
    </update>

    <!-- 활성 상태인 사용자 조회 -->
    <select id="findActiveParticipantsByRoomId" resultMap="User">
        SELECT u.*
        FROM chat_room_participants p
        JOIN users u ON p.user_id = u.user_id
        WHERE p.room_id = #{roomId} AND p.is_active = TRUE
    </select>

    <!-- 특정 채팅방의 참여자 삭제 -->
    <delete id="deleteParticipantsByRoomId">
        DELETE
        FROM chat_room_participants
        WHERE room_id = #{roomId};
    </delete>

    <!-- 채팅방에 사용자 추가 -->
    <insert id="addParticipant">
        INSERT INTO chat_room_participants (room_id, user_id, is_active)
        VALUES (#{roomId}, #{userId}, TRUE)
    </insert>

    <!-- 특정 채팅방의 참여자 수 조회 -->
    <select id="countParticipantsByRoomId" resultType="int">
        SELECT COUNT(*)
        FROM chat_room_participants
        WHERE room_id = #{roomId};
    </select>
</mapper>